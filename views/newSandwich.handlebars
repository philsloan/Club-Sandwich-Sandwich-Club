<div class="form-container">
    <form class="container" id="sandwich-form">
        <h1>Make A Sandwich</h1>
        {{#each fields as |field|}}
        <label for="{{field.name}}">{{field.label}}</label>
        <input type="text" id="{{field.name}}" name="{{field.name}}" data-id="{{../userId}}" {{field.required}}>
        {{/each}}

        <button id="submit" type="submit">Add Sandwich</button>
    </form>
</div>

<script src="/js/newSandwich.js"></script>